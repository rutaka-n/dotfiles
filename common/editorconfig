root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[**.rb]
indent_size = 2

[**.rake]
indent_size = 2

[**.erb]
indent_size = 2

[**.jbuilder]
indent_size = 2

[**.ex]
indent_size = 2

[**.exs]
indent_size = 2

[**.rs]
indent_size = 8

[**.c]
indent_size = 8
indent_style = tab

# Use 2 spaces for the HTML files
[*.html]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = ignore

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
